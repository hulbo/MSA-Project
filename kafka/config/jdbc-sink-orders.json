{
  "name": "jdbc-sink-orders",
  "config": {
    "connector.class": "io.confluent.connect.jdbc.JdbcSinkConnector",
    "_comment_connection": "데이터베이스 연결 정보 (환경 변수 사용)",
    "connection.url": "${env:DB_URL}",
    "connection.user": "${env:DB_USER}",
    "connection.password": "${env:DB_PASSWORD}",
    "_comment_topics": "Kafka에서 데이터를 수집할 토픽 목록",
    "topics": "t_sc_orders",
    "_comment_auto_create": "테이블이 존재하지 않을 경우 자동으로 생성",
    "auto.create": "false",
    "_comment_auto_evolve": "테이블의 스키마 변경을 자동 적용 (새 필드 추가 등)",
    "auto.evolve": "true",
    "_comment_insert_mode": "데이터 삽입 모드 ('insert' | 'upsert')",
    "insert.mode": "upsert",
    "_comment_pk_mode": "기본 키 설정 방식 ('record_value': 메시지 값에서 PK를 가져옴)",
    "pk.mode": "record_value",
    "_comment_pk_fields": "기본 키로 사용할 필드 (여러 개 가능)",
    "pk.fields": "order_id, product_id",
    "_comment_delete_enabled": "데이터 삭제 활성화 여부 (record_key만 사용 가능)",
    "delete.enabled": "false",
    "_comment_key_converter": "Kafka 메시지의 키 변환 방식",
    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "_comment_value_converter": "Kafka 메시지의 값 변환 방식",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "_comment_value_converter_schemas_enable": "Kafka 메시지에 스키마 정보를 포함할지 여부",
    "value.converter.schemas.enable": "true"
  }
}
